{
  "name": "snippets-backend",
  "version": "1.0.0",
  "main": "build/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:bundle": "tsdown --project tsconfig.bundle.json",
    "build:prod": "tsdown --project tsconfig.bundle.json --minify",
    "start": "node build/server.js",
    "start:bundle": "node build/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "migrate": "drizzle-kit push",
    "test:migrate": "drizzle-kit push --config tests/drizzle.config.ts",
    "db:generate": "drizzle-kit generate",
    "db:pull": "drizzle-kit pull",
    "studio": "drizzle-kit studio"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "better-auth": "^1.3.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.4",
    "drizzle-seed": "^0.3.0",
    "express": "^4.19.2",
    "pg": "^8.11.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "tsdown": "^0.12.9",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.40.0",
    "vitest": "^1.5.2"
  }
}
